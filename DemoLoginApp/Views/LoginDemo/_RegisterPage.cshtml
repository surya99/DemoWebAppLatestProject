@model DemoLoginApp.Models.tbl_RegisterUser

<div class="form-group">
    @Html.TextBoxFor(m => m.sUserName, new { @class = "form-control", id = "username", placeholder = "Enter User Name", tabindex = "1" })
    @Html.ValidationMessageFor(m => m.sUserName)
</div>
<div class="form-group">
    @Html.TextBoxFor(m => m.sEmail, new { @class = "form-control", id = "email", placeholder = "Email Address", tabindex = "2" })
    @Html.ValidationMessageFor(m => m.sEmail)
</div>
<div class="form-group">
    @Html.PasswordFor(m => m.sPassword, new { @class = "form-control", id = "password", placeholder = "Password", tabindex = "3" })
    @Html.ValidationMessageFor(m => m.sPassword)
</div>
<div class="form-group">
    @Html.PasswordFor(m => m.sPassword, new { @class = "form-control", id = "confirm-password", placeholder = "Confirm Password", tabindex = "4" })
    @Html.ValidationMessageFor(m => m.sPassword)
</div>
<div class="form-group">
    @Html.TextBoxFor(m => m.sPhoneNumber, new { @class = "form-control", id = "phonenumber", placeholder = "Enter Phone Number", tabindex = "5" })
    @Html.ValidationMessageFor(m => m.sPhoneNumber)
</div>
<div class="form-group">
    <div class="row">
        <div class="col-sm-4">
            <input type="submit" name="register-submit" id="register-submit" tabindex="5" class="form-control btn btn-default" value="Register Now">
        </div>
    </div>
</div>
